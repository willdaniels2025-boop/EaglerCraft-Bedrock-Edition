<?xml version='1.0' encoding='utf-8'?>
<widget id="com.eaglercraft.mobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Eaglercraft Mobile</name>
  <description>Voxel demo with pixel UI + in-app login.</description>
  <author email="you@example.com">EAGTEK Studios</author>

  <content src="index.html"/>
  <preference name="Fullscreen" value="true"/>
  <preference name="Orientation" value="landscape"/>
  <preference name="BackgroundColor" value="0x000000"/>
  <preference name="AndroidPersistentFileLocation" value="Internal"/>
  <access origin="*"/>

  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>

  <platform name="android">
    <preference name="android-minSdkVersion" value="24"/>
    <preference name="android-targetSdkVersion" value="34"/>
    <preference name="AndroidInsecureFileModeEnabled" value="true"/>
    <icon src="res/icon/android/icon.png"/>
  </platform>
</widget>